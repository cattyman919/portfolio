---
import SkillCard from "./SkillCard.astro";
import type { SkillCardProp } from "../types/skill";
import type { AstroComponentFactory } from "astro/runtime/server/index.js";

interface Props {
  title: string;
  icon: AstroComponentFactory;
  data: SkillCardProp[];
}

const { title, icon: Icon, data } = Astro.props;
---

<div
  class="flex flex-col border-b-2 py-6 first:border-t-2 lg:first:border-t-0 lg:py-0 border-white lg:border-0 lg:flex-row items-center gap-3"
>
  <div class="flex w-[200px] flex-col items-center gap-4">
    <Icon width="64" height="64" />
    <p class="text-3xl font-bold text-center">{title}</p>
  </div>
  <div
    class="grid grid-cols-2 py-5 pr-3 pl-3 sm:grid-cols-3 md:grid-cols-5 gap-4"
  >
    {data.map((item) => <SkillCard {...item} />)}
  </div>
</div>
