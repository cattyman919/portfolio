---
import SkillCard from "@components/SkillCard.astro";
import {
  MobileSkills,
  WebsiteSkills,
  UIUXSkills,
  BackendSkills,
  IoTSkills,
  MiscSkills,
} from "@data/skillData";
---

<section id="skills" class="py-20">
  <h2 class="text-4xl font-bold text-center mb-10">Skills</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <div class="flex flex-col gap-4">
      <h3 class="text-2xl font-bold text-primary-accent">Mobile</h3>
      {MobileSkills.map((skill) => <SkillCard {...skill} />)}
    </div>
    <div class="flex flex-col gap-4">
      <h3 class="text-2xl font-bold text-primary-accent">Website</h3>
      {WebsiteSkills.map((skill) => <SkillCard {...skill} />)}
    </div>
    <div class="flex flex-col gap-4">
      <h3 class="text-2xl font-bold text-primary-accent">UI/UX</h3>
      {UIUXSkills.map((skill) => <SkillCard {...skill} />)}
    </div>
    <div class="flex flex-col gap-4">
      <h3 class="text-2xl font-bold text-primary-accent">Backend</h3>
      {BackendSkills.map((skill) => <SkillCard {...skill} />)}
    </div>
    <div class="flex flex-col gap-4">
      <h3 class="text-2xl font-bold text-primary-accent">IoT</h3>
      {IoTSkills.map((skill) => <SkillCard {...skill} />)}
    </div>
    <div class="flex flex-col gap-4">
      <h3 class="text-2xl font-bold text-primary-accent">Misc</h3>
      {MiscSkills.map((skill) => <SkillCard {...skill} />)}
    </div>
  </div>
</section>
